{% extends 'base.email.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block subject %}
    {%- autoescape false -%}
        {{ 'resetting.email.subject'|trans({'%username%': user.username}) }}
    {%- endautoescape -%}
{% endblock %}

{% block body_text_content %}
    {% autoescape false %}
        {{ 'resetting.email.message'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl}) }}
    {% endautoescape %}
{% endblock %}

{% block body_html_content %}
    {% autoescape false %}
        {{ 'email.reset.message'|trans({'%username%': user.username, '%confirmationUrl%': confirmationUrl}, 'messages') }}
    {% endautoescape %}
{% endblock %}